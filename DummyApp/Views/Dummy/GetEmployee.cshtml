@model DummyApp.ViewModels.EmployeeViewModel
@{
    ViewBag.Title = "GetEmployee";
}

<h2>Employee</h2>

<div class="card" style="width:400px">
    <img class="card-img-top" src="~/Content/Images/profile.jpg" alt="Card image">
    <div class="card-body">
        <h4 class="card-title" style="font-size:large;">@Model.name</h4>
        <p class="card-text" style="font-size:medium;">@Model.status</p>
        @Html.ActionLink("Employees","Index", "Dummy")
    </div>
</div>